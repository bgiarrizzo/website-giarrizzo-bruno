    <meta charset="utf-8" />
    <meta content='text/html; charset=utf-8' http-equiv='Content-Type' />
    <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1.0, maximum-scale=5.0" />
    <link rel="alternate" type="application/rss+xml" title="{{ site.name }} - Blog RSS" href="{{ site.url }}/blog/feed.xml" />
    <meta name="rating" content="General" />
    <meta name="Author" content="{{ site.name }}" />
    <meta name="Webmaster" content="{{ site.name }}" />
    <meta http-equiv='X-UA-Compatible' content='IE=edge' />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="format-detection" content="telephone=no" />
    <meta name="Language" content="{{ site.language }}" />
    <meta http-equiv="content-language" content="{{ site.language }}" />
    <meta name="robots" content="all" />
    <meta name="revisit-after" content="1 days" />
    <meta name="expires" content="never" />

    <!-- SEO -->
    <meta name="robots" content="index, follow" />
    <meta name="googlebot" content="index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1" />
    <meta name="bingbot" content="index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1" />
    <meta name="identifier-URL" content="{{ site.url }}" />
 
    <!-- Meta -->
    {% if page %}
        {% if page.meta_title %}
            <title>{{ page.meta_title }} - {{ site.short_url }}</title>
        {% else %}
            <title>{{ site.short_url }}</title>
        {% endif %}
        <meta name="title" content="{{ page.meta_title }} - {{ site.short_url }}" />
        {% if page.permalink %}
            <link rel="canonical" href="{{ site.url }}/{{ page.permalink }}/" />
        {% else %}
            <link rel="canonical" href="{{ site.url }}" />
        {% endif %}
        <meta name="keywords" content="{{ site.keywords | join(', ') }}, {{ page.tags | join(', ') }}" />
        <meta name="description" content="{{ page.summary }}" />
    {% elif post %}
        <title>{{ post.title }} - {{ site.short_url }}</title>
        <meta name="title" content="{{ post.title }} - {{ site.short_url }}" />
        <link rel="canonical" href="{{ site.url }}/blog/{{ post.slug }}/" />
        <meta name="keywords" content="{{ site.keywords | join(', ') }}, {{ post.tags | join(', ') }}" />
        <meta name="description" content="{{ post.summary }}" />
    {% else %}
        {% if resume %}
            <title>Resume - {{ site.short_url }}</title>
            <link rel="canonical" href="{{ site.url }}/resume/" />
            <meta name="title" content="Resume - {{ site.short_url }}" />
            <meta name="keywords" content="{{ site.keywords | join(', ') }}, {{ resume.tags | join(', ') }}" />
        {% elif all_posts %}
            <title>Blog - {{ site.short_url }}</title>
            <link rel="canonical" href="{{ site.url }}/blog/" />
            <meta name="title" content="Blog - {{ site.short_url }}" />
            <meta name="keywords" content="{{ site.keywords | join(', ') }}" />
        {% else %}
            <title>{{ site.short_url }}</title>
            <link rel="canonical" href="{{ site.url }}/" />
            <meta name="title" content="{{ site.short_url }}" />
            <meta name="keywords" content="{{ site.keywords | join(', ') }}" />
        {% endif %}
        <meta name="description" content="{{ site.description }}" />
    {% endif %}
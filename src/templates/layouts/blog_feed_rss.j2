<feed xmlns="http://www.w3.org/2005/Atom"
      xmlns:thr="http://purl.org/syndication/thread/1.0"
      xml:lang="en">

        <title>{{ site.name }}</title>
        <subtitle>{{ site.description_meta }}</subtitle>

        <updated>{{ site.time }}</updated>

        <link rel="alternate" type="text/html" href="{{ site.url }}" />
        <id>{{ site.url }}</id>
        <link rel="self" type="application/atom+xml" href="{{ site.url }}/blog/feed.xml" />

        <generator>BrunoJamStackGenerator</generator>
        <link>{{ site.url }}/blog/</link>

        {% for post in posts %}
          <entry>
              <title>{{ post.title }}</title>
              <author>
                  <name>{{ post.author }}</name>
                  <uri>{{ site.url }}</uri>
              </author>
              <pubDate>{{ post.date }}</pubDate>
              <link>{{ site.url }}{{ post.url }}</link>
              {% if post.summary %}
                <description><![CDATA[{{ post.summary }}]]></description>
              {% else %}
                <description><![CDATA[{{ post.content }}]]></description>
              {% endif %}
              <content:encoded><![CDATA[{{ post.content }}]]></content:encoded>
          </entry>
        {% endfor %}
    </channel>
</feed>



<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">

  <title>{{ site.title }}</title>
  <link rel="alternate" type="text/html" href="{{ site.url }}"/>
  <link rel="self" type="application/atom+xml" href="{{ site.url }}/atom.xml"/>
  {%- for post in posts -%}
  {%- if loop.index < 1 + 1 %}
  <updated>{{ post.year }}-{{ post.month }}-{{ post.day }}T{{ post.hour }}:{{ post.minute }}:{{ post.second }}Z</updated>
  {%- endif -%}
  {%- endfor %}
  <link href="{{ site.url }}/"/>
  <author>
    <name>{{ site_author }}</name>
  </author>
  <id>{{ site.url }}/atom.xml</id>
  {% for post in posts %}
  <entry>
    <title>{{ post.title | e }}</title>
    <link href="{{ site.url }}/{{ post.url }}"/>
    <id>{{ site.url }}/{{ post.url }}</id>
    <updated>{{ post.year }}-{{ post.month }}-{{ post.day }}T{{ post.hour }}:{{ post.minute }}:00Z</updated>
    <summary>{{ post.desc | e }}</summary>
  </entry>
  {%- endfor %}

</feed>
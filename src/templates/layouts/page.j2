<header>
  {% if page.cover %}
    <img width="100%" src="{{ site.url }}/media/images/pages/{{ page.cover }}" alt="{{ page.cover_alt }}">
  {% endif %}
  {% if page.title %}
    <h1>
      {{ page.title }}
    </h1>
  {% endif %}
  {% if page.summary %}
    <p class="subtitle">
      {{ page.summary }}
    </p>
  {% endif %}
</header>

<article>
  {{ page.body }}
</article>